{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "ruby_lsp",
            "name": "Debug script",
            "request": "launch",
            "program": "bundle exec ruby ${file}"
        },
        {
            "type": "ruby_lsp",
            "name": "Debug test",
            "request": "launch",
            "program": "bundle exec ruby -Itest ${relativeFile}"
        },
        {
            "type": "ruby_lsp",
            "name": "Debug spec",
            "request": "launch",
            "program": "bundle exec ruby -Ispec ${relativeFile}"
        },
        {
            "type": "ruby_lsp",
            "name": "Attach debugger",
            "request": "attach"
        }
    ]
}
